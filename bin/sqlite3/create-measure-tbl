#!/bin/bash

function usage {
  echo
  echo "### USAGE #########################################"
  echo
  echo " ./bin/sqlite3/create-measure-tbl [ENV]"
  echo
  echo "ENV: {production|development|test} default: test"
  echo
  echo "###################################################"
  echo
}

env=${1:-test}

if [[ ! "$env" =~ ^production|development|test$ ]];then
  usage
  exit 0
fi
db="results/${env}.db"

sqlite3 $db < sql/sqlite3/create-measure-tbl.sql
